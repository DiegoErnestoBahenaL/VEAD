<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/aclonica"
            android:textSize="18dp"
            android:paddingBottom="4dp" />
        <EditText
            android:id="@+id/etTitulo"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:fontFamily="@font/aclonica"
            android:background="@drawable/edittext_border2"
            android:paddingStart="10dp"
            android:hint="Ingrese el título" />

        <!-- Autor -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Autor"
            android:paddingTop="8dp"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/aclonica"
            android:textSize="18dp"
            android:paddingBottom="4dp" />
        <EditText
            android:id="@+id/etAutor"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:fontFamily="@font/aclonica"
            android:background="@drawable/edittext_border2"
            android:paddingStart="10dp"
            android:hint="Ingrese el autor" />

        <!-- Género -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Género"
            android:paddingTop="8dp"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/aclonica"
            android:textSize="18dp"
            android:paddingBottom="4dp" />
        <EditText
            android:id="@+id/etGenero"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:fontFamily="@font/aclonica"
            android:background="@drawable/edittext_border2"
            android:paddingStart="10dp"
            android:hint="Ingrese el género" />

        <!-- Número de Copias -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número de Copias"
            android:paddingTop="8dp"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/aclonica"
            android:textSize="18dp"
            android:paddingBottom="4dp" />
        <EditText
            android:id="@+id/etNumeroCopias"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:fontFamily="@font/aclonica"
            android:background="@drawable/edittext_border2"
            android:paddingStart="10dp"
            android:hint="Ingrese el número de copias"
            android:inputType="number" />

        <!-- Ubicación -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicación"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/aclonica"
            android:textSize="18dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />
        <EditText
            android:id="@+id/etUbicacion"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:fontFamily="@font/aclonica"
            android:background="@drawable/edittext_border2"
            android:paddingStart="10dp"
            android:hint="Ingrese la ubicación" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>