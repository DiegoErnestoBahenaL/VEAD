<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de la multa"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/aclonica"
                android:textSize="18dp"
                android:paddingBottom="4dp" />
            <EditText
                android:id="@+id/etFecha"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:fontFamily="@font/aclonica"
                android:background="@drawable/edittext_border2"
                android:paddingStart="10dp"
                android:hint="Seleccione la fecha"
                android:focusable="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleccionar estudiante"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/aclonica"
                android:textSize="18dp"
                android:paddingBottom="4dp" />
            <Spinner
                android:id="@+id/spinnerEstudiantes"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:fontFamily="@font/aclonica"
                android:background="@drawable/edittext_border2"
                android:paddingStart="10dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleccionar gravedad"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/aclonica"
                android:textSize="18dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />
            <ListView
                android:id="@+id/lvGravedad"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:fontFamily="@font/aclonica"
                android:background="@drawable/edittext_border2"
                android:paddingStart="10dp"
                android:choiceMode="singleChoice"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/aclonica"
                android:textSize="18dp"
                android:paddingBottom="4dp" />
            <EditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:fontFamily="@font/aclonica"
                android:background="@drawable/edittext_border2"
                android:paddingStart="10dp"
                android:hint="Ingrese la descripción" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Firma"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/aclonica"
                android:textSize="18dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />
            <EditText
                android:id="@+id/etFirma"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:fontFamily="@font/aclonica"
                android:background="@drawable/edittext_border2"
                android:paddingStart="10dp"
                android:hint="Ingrese su firma" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>