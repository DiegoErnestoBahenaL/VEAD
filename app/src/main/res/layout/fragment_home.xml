<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Campos comunes de Usuario -->
            <TextView
                android:id="@+id/textEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo Electrónico" />
            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false" />

            <TextView
                android:id="@+id/textNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre" />
            <EditText
                android:id="@+id/editNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textFechaCreacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Creación" />
            <EditText
                android:id="@+id/editFechaCreacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false" />

            <TextView
                android:id="@+id/textFechaExpiracion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Expiración" />
            <EditText
                android:id="@+id/editFechaExpiracion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Usuario" />
            <EditText
                android:id="@+id/editTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false" />

            <!-- Campos específicos de Administrador -->
            <TextView
                android:id="@+id/textCodigoTrabajador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Código Trabajador"
                android:visibility="gone" />
            <EditText
                android:id="@+id/editCodigoTrabajador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textRFC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RFC"
                android:visibility="gone" />
            <EditText
                android:id="@+id/editRFC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textNombreSupervisor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Supervisor"
                android:visibility="gone" />
            <EditText
                android:id="@+id/editNombreSupervisor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teléfono"
                android:visibility="gone" />
            <EditText
                android:id="@+id/editTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textTurno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turno"
                android:visibility="gone" />
            <EditText
                android:id="@+id/editTurno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <!-- Campos específicos de Estudiante -->
            <TextView
                android:id="@+id/textRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registro"
                android:visibility="gone" />
            <EditText
                android:id="@+id/editRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textGrado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grado"
                android:visibility="gone" />
            <EditText
                android:id="@+id/editGrado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textCarrera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carrera"
                android:visibility="gone" />
            <EditText
                android:id="@+id/editCarrera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textNombreTutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Tutor"
                android:visibility="gone" />
            <EditText
                android:id="@+id/editNombreTutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textGrupo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grupo"
                android:visibility="gone" />
            <EditText
                android:id="@+id/editGrupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonActualizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actualizar"
                android:layout_margin="16dp" />
        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>