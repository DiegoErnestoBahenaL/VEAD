<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        tools:ignore="MissingConstraints">

        <!-- Folio y Registro -->
        <TextView
            android:id="@+id/tvFolioRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/aclonica"
            android:paddingBottom="4dp" />

        <!-- TÃ­tulo del libro -->
        <TextView
            android:id="@+id/tvTituloLibro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/aclonica"
            android:paddingBottom="4dp" />

        <!-- Fechas -->
        <TextView
            android:id="@+id/tvFechas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp" />

        <!-- Estado -->
        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/aclonica"
            android:paddingBottom="8dp" />

        <!-- Botones (solo visible para administradores) -->
        <LinearLayout
            android:id="@+id/layoutBotones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:visibility="gone">

            <Button
                android:id="@+id/btnAprobar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aprobar"
                android:textSize="13sp"
                android:fontFamily="@font/aclonica"
                android:backgroundTint="@color/button_primary"/>

            <Button
                android:id="@+id/btnRechazar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Rechazar"
                android:textSize="13sp"
                android:fontFamily="@font/aclonica"
                android:backgroundTint="@color/button_primary"/>

            <Button
                android:id="@+id/btnEliminarSolicitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Eliminar"
                android:textSize="13sp"
                android:fontFamily="@font/aclonica"
                android:backgroundTint="@color/button_primary"/>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>